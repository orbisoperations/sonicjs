{
  "name": "sonicjs",
  "version": "0.0.2",
  "description": "Headless CMS based on Cloudflare Workers",
  "main": "src/server.ts",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:wrangler": "wrangler pages dev dist",
    "dev:esbuild": "node ./src/cms/util/build.mjs",
    "build": "node ./src/cms/util/build.mjs",
    "deploy": "wrangler pages deploy dist",
    "test": "jest --verbose",
    "generate": "drizzle-kit generate:sqlite --schema=./src/db/schema.ts --out=./migrations",
    "up": "wrangler d1 migrations apply sonicjs2 --local",
    "up:prod": "wrangler d1 migrations apply sonicjs",
    "tail": "wrangler pages deployment tail"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "drizzle-kit": "^0.19.13",
    "esbuild": "^0.17.19",
    "esbuild-plugin-copy": "^2.1.1",
    "miniflare": "^3.20231025.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "wrangler": "^3.15.0"
  },
  "dependencies": {
    "@types/jest": "^29.5.8",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.27.2",
    "esbuild-jest": "^0.5.0",
    "gridjs": "^6.0.6",
    "gridjs-react": "^6.0.1",
    "hono": "^3.10.1",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.1",
    "lokijs": "^1.5.12",
    "qs": "^6.11.2",
    "uuid": "^9.0.1"
  }
}
